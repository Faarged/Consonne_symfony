{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/main.css">
{% endblock %}

{% block title %}Accueil{% endblock %}

{% block body %}
              <div class="accueil">
                <div class="titre">
                  <h1>Accueil</h1>
                <h2>Bienvenue {{ app.user.pseudo }}</h2>
                {% if is_granted('ROLE_ADMIN') %}
                  <p>
                    <a href="{{ path('create_user') }}">Créer un nouveau compte</a><br>
                    <a href="">Créer un nouveau matériel</a>
                  </p>
                  {% endif %}
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                <div class="perso">
                  <table><br>
                    <caption>Les prochains départs</caption>
                    <tr>
                      <td>Nom</td>
                      <td>Prenom</td>
                      <td>Carte</td>
                      <td>Début de la réservation</td>
                      <td>Durée utilisée</td>
                      <td>Temps maximum</td>
                    </tr>
                    {% for reservation in resa %}
                    <tr>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
                  {% endfor %}
                  </table>
                </div>
                {% endif %}
                <section id="breve_accueil">
                  <div class="titre" id="sous-titre">
                    <h3>Brèves</h3>
                  </div>
                  <div class="breve">
                  {% for breves in breve %}
                    <h4>{{ breves.title }}</h4>
                    <p>{{ breves.content }}</p>
                  {% endfor %}
                  </div>
                </section>
                </div>
{% endblock %}
