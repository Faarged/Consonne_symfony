{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/main.css">
{% endblock %}

{% block title %}
Configuration
{% endblock %}

{% block body %}
<div class="contenu col-10">
  <div class="titre animated fadeInRight">
   <h1>Configuration</h1>
  </div>
  <div class="perso animated fadeInUp">
    <table>
      <caption>Horaires de la médiathèque</caption>
      <tr>
        <td>Jours :</td>
        <td>Horaires :</td>
        <td>Modifications</td>
      </tr>
      {% for config in configs %}
      <tr>
        <td>{{ config.days }}</td>
        <td>{{ config.openAt | date('H:i') }} - {{ config.closeAt | date('H:i') }}</td>
        <td><a href="{{ path('edit_config', {'id': config.id}) }}"><i class="fas fa-cogs"></i></a></td>
      </tr>
      {% endfor %}
    </table>
  </div>
</div>
</div>
{% endblock %}
