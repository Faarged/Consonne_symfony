{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/main.css">
{% endblock %}

{% block title %}
Création de brève
{% endblock %}

{% form_theme formBreve 'bootstrap_4_layout.html.twig' %}

{% block body %}
  <div class="contenu">
    <div class="titre animated fadeInRight">
      <h1>Création de brève</h1>
    </div>
    <div class="perso animated fadeInUp">
          {{ form_start(formBreve) }}
          {{ form_row(formBreve.title, {'label': 'Titre', 'attr':{'placeholder':"Titre"}}) }}
          {{ form_row(formBreve.content, {'label': 'Contenu', 'attr':{'placeholder':"Contenu"}}) }}
          <button type="submit" class="btn btn-success" name="button">Valider</button>
          {{ form_end(formBreve) }}
        </div>
  </div>
</div>
{% endblock %}
