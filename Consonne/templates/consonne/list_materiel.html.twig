{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/main.css">
{% endblock %}

{% block title %}
Liste du materiel
{% endblock %}

{% block body %}
<div class="contenu col-xs-12 col-m-10">
  <div class="titre animated fadeInRight">
   <h1>Liste du materiel</h1>
   <p>
    <a href="{{ path('create_materiel') }}">Cr√©er un materiel</a>
   </p>
  </div>
  <div class="perso animated fadeInUp">
  <div class="table-responsive">
    <table class="table">
      <caption>Liste du materiel disponible</caption>
      <tr>
        <td>Nom</td>
        <td>type</td>
        <td>Supprimer le materiel</td>
      </tr>
      {% for materiel in materiels %}
      <tr>
        <td>{{ materiel.name }}</td>
        <td>{{ materiel.type }}</td>
        <td><a href="{{ path('materiel_delete', {'id': materiel.id}) }}"><i class="fas fa-trash-alt"></i></a></td>
      </tr>
      {% endfor %}
    </table>
    </div>
  </div>
</div>
</div>
{% endblock %}
