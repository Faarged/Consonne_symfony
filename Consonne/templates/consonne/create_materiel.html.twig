{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/main.css">
{% endblock %}

{% block title %}
Création de matériel
{% endblock %}

{% form_theme formMateriel 'bootstrap_4_layout.html.twig' %}

{% block body %}
  <div class="contenu">
    <div class="titre animated fadeInRight">
      <h1>Création de matériel</h1>
    </div>
    <div class="perso animated fadeInUp">
          {{ form_start(formMateriel) }}
          {{ form_row(formMateriel.name, {'label': 'Nom du matériel', 'attr':{'placeholder':"Nom du matériel"}}) }}
          {{ form_row(formMateriel.type, {'label': 'Type de matériel'}) }}
          <button type="submit" class="btn btn-success" name="button">Valider</button>
          {{ form_end(formMateriel) }}
        </div>
  </div>
</div>
{% endblock %}
