{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/main.css">
{% endblock %}

{% block title %}
Liste des jeux
{% endblock %}

{% block body %}
<div class="contenu col-10">
  <div class="titre animated fadeInRight">
   <h1>Liste des jeux</h1>
   <p>
    <a href="{{ path('create_game') }}">Ajouter un jeu</a>
   </p>
  </div>
  <div class="perso animated fadeInUp">
    <table>
      <caption>Liste des jeux disponibles</caption>
      <tr>
        <td>Titre</td>
        <td>Pegi</td>
        <td>Support</td>
        <td>Supprimer le jeu</td>
      </tr>
      {% for game in games %}
      <tr>
        <td>{{ game.title }}</td>
        <td>{{ game.pegi }}</td>
      <td>{% for materiel in game.support %}{{ materiel.name }} | {% endfor %}</td>
        <td><a href="{{ path('game_delete', {'id': game.id}) }}"><i class="fas fa-trash-alt"></i></a></td>
      </tr>
      {% endfor %}
    </table>
  </div>
</div>
</div>
{% endblock %}
