{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/main.css">
{% endblock %}

{% block title %}
Liste des brèves
{% endblock %}

{% block body %}
      <div class="contenu col-xs-12 col-m-10">
        <div class="titre animated fadeInRight">
          <h1>Brèves</h1>
          <p>
            <a href="{{ path('new_breves') }}">Création de brève</a>
          </p>
        </div>
        {% for breve in breves %}
        <div class="breve animated fadeInUp">
          <h3>{{ breve.title }}</h3>
          <p>
            {{ breve.content }}
          </p>
          <h5>
            Supprimer cette brève: <a href="{{ path('breve_delete', {'id': breve.id }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette brève?')"><i class="fas fa-trash-alt"></i></a>
          </h5>
        </div>
        {% endfor %}
      </div>
    </div>
{% endblock %}
